source "https://rubygems.org"

# github-pages 젬을 지우고, jekyll을 직접 명시합니다.
gem "jekyll"

# 최신 CSS 문법을 해석할 수 있는 변환기를 강제로 설치합니다.
gem "jekyll-sass-converter", "~> 3.0" 

# 윈도우/Ruby 3.0 이상 호환성 패치
gem "webrick"
gem "bigdecimal"

# 테마 관련 (만약 jekyll-theme-yat를 쓴다면 주석 해제)
# gem "jekyll-theme-yat"

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
end